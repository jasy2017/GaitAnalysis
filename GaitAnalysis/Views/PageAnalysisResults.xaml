                            <chart:SfChart WidthRequest="150" HeightRequest="300">
                                <chart:SfChart.PrimaryAxis>
                                    <chart:NumericalAxis/>
                                </chart:SfChart.PrimaryAxis>
                                <chart:SfChart.SecondaryAxis>
                                    <chart:NumericalAxis IsInversed="true"/>
                                </chart:SfChart.SecondaryAxis>
                                <chart:LineSeries ItemsSource="{Binding CaderaPoints}"
                                                  XBindingPath="AnkleX"
                                                  YBindingPath="HipY"
                                                  Color="Blue"
                                                  Label="Cadera"/>
                                <chart:LineSeries ItemsSource="{Binding CaderaPoints}"
                                                  XBindingPath="AnkleX"
                                                  YBindingPath="KneeY"
                                                  Color="Orange"
                                                  Label="Rodilla"/>
                                <chart:LineSeries ItemsSource="{Binding CaderaPoints}"
                                                  XBindingPath="AnkleX"
                                                  YBindingPath="AnkleY"
                                                  Color="Green"
                                                  Label="Tobillo"/>
                                <chart:SfChart.Legend>
                                    <chart:ChartLegend/>
                                </chart:SfChart.Legend>
                            </chart:SfChart>
                        </Frame>
                    </StackLayout>
                </xct:Expander.Content>
