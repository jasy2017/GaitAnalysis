                        </StackLayout>
                    </Frame>
                </xct:Expander.Header>
                <xct:Expander.Content>
                    <StackLayout>
                        <Label Text="Trayectoria de cada articulación" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" TextColor="DarkGray"/>
